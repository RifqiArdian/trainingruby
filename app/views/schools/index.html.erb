<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<table border="1">
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Address</th>
      <th>Telepon</th>
      <th>Name</th>
      <th>Kepalasekolah</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
  <% if @schools.count==0%>
    <tr>
      <td colspan="6">Tidak ada data yang terdaftar</td>
    </tr>
  <% else %>
    <% @schools.each do |school| %>
      <tr>  
        <td><%= school.student_id %></td>
        <td><%= school.address %></td>
        <td><%= school.telepon %></td>
        <td><%= school.name %></td>
        <td><%= school.kepalasekolah %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New School', new_school_path %><br/>
<%= link_to 'Student', Student %><br/>
<%= link_to 'Home', Home %><br/>
<%= link_to 'Log Out', destroy_user_session_path %>