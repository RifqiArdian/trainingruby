<p id="notice"><%= notice %></p>

<h1>Listing Homes</h1>

<table border="1">
  <thead>
    <tr>
      <th>Student Id</th>
      <th>Address</th>
      <th>Name</th>
      <th>Telepon</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
  <% if @homes.count==0%>
    <tr>
      <td colspan="5">Tidak ada data yang terdaftar</td>
    </tr>
  <% else %>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.student_id %></td>
        <td><%= home.address %></td>
        <td><%= home.name %></td>
        <td><%= home.telepon %></td>
        <td><%= link_to 'Show', home %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

